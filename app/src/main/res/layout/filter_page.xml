<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/appbacground"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_close_24"
            />

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />


        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textSize="15sp"
            android:textColor="@color/green"
            />



    </LinearLayout>


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sort By"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"/>
            <Spinner
                android:layout_weight="1"
                android:id="@+id/spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Price Range"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <SeekBar
        android:layout_margin="10dp"
        android:id="@+id/PRICEseekBarID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:max="100" >
    </SeekBar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Categories"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:background="@drawable/white_shape"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="32dp"
            android:text="Any"/>
        <Button
            android:background="@drawable/white_shape"
            android:textAllCaps="false"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Rental Product"/>
        <Button
            android:background="@drawable/white_shape"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Groceries"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:background="@drawable/white_shape"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Emergency Care "/>

        <Button
            android:background="@drawable/white_shape"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:layout_width="86dp"
            android:layout_height="32dp"
            android:textSize="12sp"
            android:text="Baby Care"/>
            <Button
                android:background="@drawable/white_shape"
                android:textAllCaps="false"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:textSize="12sp"
                android:text="Old Care"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:background="@drawable/white_shape"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Health  Beauty"/>
        <Button
            android:background="@drawable/white_shape"
            android:textAllCaps="false"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:textSize="12sp"
            android:text="Woman's Care"/>

        </LinearLayout>





    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Brand"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/white_shape"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="32dp"
                android:text="Any"/>
            <Button
                android:background="@drawable/white_shape"
                android:textAllCaps="false"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="SQUARE LIMITED"/>
            <Button
                android:background="@drawable/white_shape"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Groceries"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/white_shape"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Emergency Care "/>

            <Button
                android:background="@drawable/white_shape"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:layout_width="86dp"
                android:layout_height="32dp"
                android:textSize="12sp"
                android:text="Baby Care"/>
            <Button
                android:background="@drawable/white_shape"
                android:textAllCaps="false"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:textSize="12sp"
                android:text="Old Care"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/white_shape"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Health  Beauty"/>
            <Button
                android:background="@drawable/white_shape"
                android:textAllCaps="false"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:textSize="12sp"
                android:text="Woman's Care"/>

        </LinearLayout>





    </LinearLayout>

    <Button
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:text="Apply Filter"/>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/white_shape"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:layout_width="61dp"
                android:layout_height="32dp"
                android:text="Any"/>
            <Button
                android:background="@drawable/white_shape"
                android:textAllCaps="false"
                android:layout_margin="5dp"
                android:layout_width="125dp"
                android:layout_height="32dp"
                android:text="Rental Product"/>
            <Button
                android:background="@drawable/white_shape"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:layout_width="86dp"
                android:layout_height="32dp"
                android:text="Any"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/white_shape"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:layout_width="61dp"
                android:layout_height="32dp"
                android:text="Any"/>

            <Button
                android:background="@drawable/white_shape"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:layout_width="86dp"
                android:layout_height="32dp"
                android:text="Any"/>
            <Button
                android:background="@drawable/white_shape"
                android:textAllCaps="false"
                android:layout_margin="5dp"
                android:layout_width="140dp"
                android:layout_height="32dp"
                android:text="Rental Product"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/white_shape"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:layout_width="61dp"
                android:layout_height="32dp"
                android:text="Any"/>
            <Button
                android:background="@drawable/white_shape"
                android:textAllCaps="false"
                android:layout_margin="5dp"
                android:layout_width="125dp"
                android:layout_height="32dp"
                android:text="Rental Product"/>
            <Button
                android:background="@drawable/white_shape"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:layout_width="86dp"
                android:layout_height="32dp"
                android:text="Any"/>
        </LinearLayout>





    </LinearLayout>

</LinearLayout>